extends ../layouts/common

block content
  h3 Thêm người dùng

  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/users/create", method="POST")
      label(for="name") Name
      input(name="name", type="text", value=values ? values.name : "")

      label(for="phone") Title
      input(name="phone", type="text", value=values ? values.phone : "")

      button.btn.btn-primary Create