extends ../layouts/common.pug

block content
    div(class="ml-5")   
        h2 Login
        span email : chuongcongtu9x@gmail.com
        span pass : 123456

    if errors
        each error in errors
            .alert.alert-danger= error

    div(class="ml-5")
        form(action="/auth/login" method="POST")
            .form-group
                label(for="email") Email
                input#email.form-control(name="email" type="text",value=values ? values.email : "")

            .form-group
                label(for="email") Password
                input#email.form-control(name="password" type="password",value=values ? values.password : "")

            button.btn.btn-info Login
        